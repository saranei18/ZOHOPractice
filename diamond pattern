#include<stdio.h>
int main()
{
  int n;
  scanf("%d",&n);
  int n1=n/2;
  int i,j;
  for(i=0;i<=n;i=i+2)
  {
    for(int j=0;j<n1;j++)printf(" ");
    for(int k=0;k<=i;k++)printf("*");
    n1--;
    printf("\n");
  }
  i=i-2;
  i=i-2;
  n1=n1+2;
  for(;i>=0;i=i-2)
  {
    for(int j=0;j<n1;j++)printf(" ");
    for(int k=0;k<=i;k++)printf("*");
    n1++;
    printf("\n");
  }
}
