#include<stdio.h>
void main()
{
    int n;
    scanf("%d",&n);
    int j=0;
    for(int i=0;i<=n;i++)
    {
        for(j=i;j<n;j++)
        {
            printf(" ");
        }
        for(int k=i;k>=0;k--)
        {
            printf("%d",k);
        }
        for(int k=1;k<=i;k++)
        {
            printf("%d",k);
        }
        printf("\n");
        
    }
}
