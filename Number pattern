#include<stdio.h>
void main()
{
    int a;
    int z=0;
    scanf("%d",&a);
    int space=a/2;
    int h=1;
    for(int i=1;i<=a;i=i+h)
    {
        for(int j=0;j<space;j++)
        {
            printf(" ");
        }
       for(int k=i;k>z;k--)
        {
            printf("%d ",k);
        }
        printf("\n");
        space--;
        z=i;
        h++;
    }
    ;}
