#include<iostream>
#include<vector>
#include<string.h>
#include<algorithm>
int count=0;
std::vector<char>v1;
int main()
{
    char a[]={"he knows malayalam"};
    int i=0;
    for(i=0;i<strlen(a);i++)
    {  
        int k=i;
        printf("%d ",k);
        while(a[i]!=32&&i<strlen(a))
        {
            v1.push_back(a[i]);
            i++;
        }
        reverse(v1.begin(),v1.end())
;       int j=0;
        while(j<v1.size())
        {
            if(a[k]==v1[j])
            count++;
            j++;
            k++;
        }
        if(count!=v1.size())
        {
            reverse(v1.begin(),v1.end());
            int u=0;
            while(u<v1.size())
            {
                printf("%c",v1[u]);
            }
        }
        printf("\n");
        v1.clear();
        count=0;
    }
    
}
